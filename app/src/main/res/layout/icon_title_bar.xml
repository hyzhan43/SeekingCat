<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/len_10"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/iv_claw"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_claw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_10"
        android:text="@string/app_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_claw" />
</LinearLayout>